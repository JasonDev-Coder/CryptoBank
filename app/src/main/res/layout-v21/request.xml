<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181530"
    >

    <Spinner
        android:id="@+id/choice_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        />

    <ImageView
        android:id="@+id/Qr_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/choice_spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@color/black"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/show_code_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/Qr_image"
        android:text="Show QR code to sender"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/wallet_address_indicator_id"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/show_code_id"
        android:layout_marginTop="50dp"
        android:background="@color/blue_button"
        android:text="Wallet Address"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/address_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wallet_address_indicator_id"
        android:layout_marginTop="20dp"
        android:text="1DRnurMWfTWXL9oG8iVED8r6qubqPKw7Vj"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/copy_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/copy_button"
        android:text="Copy Address"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:textColor="#181530"
        />


</RelativeLayout>