<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/wallets2">

    <androidx.cardview.widget.CardView
        android:id="@+id/wallet"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="#2C2C53"
        app:cardCornerRadius="20dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/wallet_logo"
                android:layout_width="44dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/bitcoin" />

            <TextView
                android:id="@+id/wallet_balance_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wallet_logo"
                android:layout_marginTop="0dp"
                android:text="Balance:"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/wallet_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wallet_balance_text"
                android:text="0"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/wallet_currency_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wallet_balance_text"
                android:layout_toRightOf="@id/wallet_balance"
                android:layout_marginLeft="7dp"
                android:text="BTC"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/wallet_balance_usd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/wallet_balance"
                android:text="0"
                android:textColor="#00FF0A"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/wallet_balance_usd_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/wallet_balance_usd"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@id/wallet_balance_usd"
                android:text="USD"
                android:textColor="#00FF0A"
                android:textSize="15sp" />
            <ImageView
                android:id="@+id/removeWallet"
                android:layout_width="44dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_delete"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>