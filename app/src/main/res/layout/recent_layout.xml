<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecentFragment"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent Transactions"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/shortxurkit_2xdv"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/transaction"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="#2C2C53"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/transaction_type"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/send"
                app:tint="#00FF00"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/transaction_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 BTC"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/transaction_type"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/transaction_amount_usd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="US$ 34133.45243"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_below="@+id/transaction_amount"
                android:layout_alignStart="@+id/transaction_amount"/>

            <TextView
                android:id="@+id/transaction_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/transaction_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/transaction_date"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>