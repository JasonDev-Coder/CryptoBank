<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181530">


    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EWallet"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="my wallets:"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/wallet1"
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#2C2C53"
                app:cardCornerRadius="20dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/wallet2"
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#2C2C53"
                app:cardCornerRadius="20dp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/coin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:text="coin"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/coin"
                android:layout_marginRight="25dp"
                android:gravity="right"
                android:text="price"
                android:textColor="@color/white"
                android:textSize="15dp"/>
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/BitcoinInfo"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#2C2C53"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="44dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/bitcoin" />

                <TextView
                    android:id="@+id/Bitcoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="20dp"
                    android:text="Bitcoin BTC"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/BtcPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="280dp"
                    android:layout_marginTop="25dp"
                    android:text="hello world"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="55dp">

                    <TextView
                        android:id="@+id/onehour"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="1 hour:"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white" />
                    <TextView
                        android:id="@+id/btc_perc_text_1hour"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="45dp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white" />
                    <ImageView
                        android:id="@+id/btc_perc_logo_1hour"
                        android:layout_width="25dp"
                        android:layout_height="9dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/increase"/>

                    <TextView
                        android:id="@+id/oneday"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="115dp"
                        android:text="1 day:"
                        android:textStyle="bold"
                        android:textColor="@color/white" />
                    <TextView
                        android:id="@+id/btc_perc_text_1day"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/white"/>
                    <ImageView
                        android:id="@+id/btc_perc_logo_1day"
                        android:layout_width="25dp"
                        android:layout_height="9dp"
                        android:layout_marginLeft="175dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/increase"
                        />

                    <TextView
                        android:id="@+id/week"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="230dp"
                        android:text="1 week:"
                        android:textStyle="bold"
                        android:textColor="@color/white" />
                    <TextView
                        android:id="@+id/btc_perc_text_1week"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewEnd"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/white" />
                    <ImageView
                        android:id="@+id/btc_perc_logo_1week"
                        android:layout_width="25dp"
                        android:layout_height="9dp"
                        android:layout_marginTop="3dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/increase" />

                </RelativeLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/EthereumInfo"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#2C2C53"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ETHlogo"
                    android:layout_width="44dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ethereum" />

                <TextView
                    android:id="@+id/Ethereum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="20dp"
                    android:text="Ethereum ETH"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/EthPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="280dp"
                    android:layout_marginTop="25dp"
                    android:text="hello world"
                    android:textColor="@color/white"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/eth_perc_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="280dp"
                    android:layout_marginTop="45dp"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/eth_perc_logo"
                    android:layout_width="25dp"
                    android:layout_height="9dp"
                    android:layout_marginTop="49dp"
                    android:layout_toRightOf="@+id/eth_perc_text"
                    />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/TetherInfo"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#2C2C53"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/USDTlogo"
                    android:layout_width="44dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/tether" />

                <TextView
                    android:id="@+id/Tether"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="20dp"
                    android:text="Tether USDT"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/UsdtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="280dp"
                    android:layout_marginTop="25dp"
                    android:text="hello world"
                    android:textColor="@color/white"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/usdt_perc_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="280dp"
                    android:layout_marginTop="45dp"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/usdt_perc_logo"
                    android:layout_width="25dp"
                    android:layout_height="9dp"
                    android:layout_marginTop="49dp"
                    android:layout_toRightOf="@+id/usdt_perc_text"
                    />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/XrpInfo"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#2C2C53"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/XRPlogo"
                    android:layout_width="44dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/xrp" />

                <TextView
                    android:id="@+id/Xrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="20dp"
                    android:text="XRP"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/XrpPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="280dp"
                    android:layout_marginTop="25dp"
                    android:text="hello world"
                    android:textColor="@color/white"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/xrp_perc_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="280dp"
                    android:layout_marginTop="45dp"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/xrp_perc_logo"
                    android:layout_width="25dp"
                    android:layout_height="9dp"
                    android:layout_marginTop="49dp"
                    android:layout_toRightOf="@+id/xrp_perc_text"
                    />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/LitecoinInfo"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#2C2C53"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/LITECOINlogo"
                    android:layout_width="44dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/litecoin" />

                <TextView
                    android:id="@+id/Litecoin"
                    android:layout_width="wrap_content"
                    android:layout_height="11dp"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="20dp"
                    android:text="Litecoin LTC"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/LtcPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="280dp"
                    android:layout_marginTop="25dp"
                    android:text="hello world"
                    android:textColor="@color/white"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/ltc_perc_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="280dp"
                    android:layout_marginTop="45dp"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/ltc_perc_logo"
                    android:layout_width="25dp"
                    android:layout_height="9dp"
                    android:layout_marginTop="49dp"
                    android:layout_toRightOf="@+id/ltc_perc_text"
                    />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>