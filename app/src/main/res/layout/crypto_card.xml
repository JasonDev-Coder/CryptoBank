<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/BitcoinInfo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/cardColor"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="44dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/bitcoin" />

            <TextView
                android:id="@+id/crypto_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/logo"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@id/logo"
                android:text="Bitcoin"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/crypto_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/logo"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@id/crypto_name"
                android:text="BTC"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/crypto_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/crypto_name"
                android:layout_marginRight="35dp"
                android:layout_toEndOf="@id/crypto_name"
                android:gravity="right"
                android:text="price"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="7dp">

            <TextView
                android:id="@+id/crypto_onehour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="40dp"
                android:text="1 hour:"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/crypto_perc_text_1hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/crypto_onehour"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/crypto_perc_logo_1hour"
                android:layout_width="25dp"
                android:layout_height="9dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/crypto_perc_text_1hour"
                android:src="@drawable/increase" />

            <TextView
                android:id="@+id/crypto_oneday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="1 day:"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/crypto_perc_text_1day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/crypto_oneday"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/crypto_perc_logo_1day"
                android:layout_width="25dp"
                android:layout_height="9dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/crypto_perc_text_1day"
                android:src="@drawable/increase" />

            <TextView
                android:id="@+id/crypto_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/crypto_perc_text_1week"
                android:paddingLeft="10dp"
                android:text="1 week:"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/crypto_perc_text_1week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toStartOf="@id/crypto_perc_logo_1week"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/crypto_perc_logo_1week"
                android:layout_width="25dp"
                android:layout_height="9dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="3dp"
                android:src="@drawable/increase" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>